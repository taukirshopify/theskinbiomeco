<div class="space-top">
    <div class="container">
        <div class="tab-content" id="faqTabContent">

            <h5 class="border-title">{{section.settings.main_heading }}</h5>

            <div class="accordion-area accordion" id="faqAccordion">


            {% for block in section.blocks %}
            <div class="accordion-card {% if forloop.index == 1 %}active{% endif %}">
                <div class="accordion-header" id="collapse2-item-{{forloop.index}}">
                    <button class="accordion-button {% if forloop.index != 1 %}collapsed{% endif %}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse2-{{forloop.index}}"
                        aria-expanded="{% if forloop.index != 1 %}false{% endif %}{% if forloop.index == 1 %}true{% endif %}" aria-controls="collapse2-{{forloop.index}}">{{ block.settings.faq_heading }}</button>
                </div>
                <div id="collapse2-{{forloop.index}}" class="accordion-collapse collapse {% if forloop.index == 1 %}show{% endif %}" aria-labelledby="collapse2-item-{{forloop.index}}"
                    data-bs-parent="#faqAccordion2">
                    <div class="accordion-body">
                        <p class="faq-text">{{ block.settings.faq_text }}</p>
                    </div>
                </div>
            </div>
            {% endfor %}

            </div>
            
        </div>
    </div>
</div>

{% schema %}
    {
    "name": "Faq Content",
    "settings": [
        {
          "type": "text",
          "id": "main_heading",
          "label": "Heading"
        }
    ],
    "blocks": [
    {
    "type": "text_block",
    "name": "FAQ Content",
    "settings": [
    
    {
    "type": "text",
    "id": "faq_heading",
    "label": "Heading"
    },
    {
    "type": "textarea",
    "id": "faq_text",
    "label": "Description"
    }
    ]
    }
    ],
    "presets": [
      {
        "name": "FAQ Content",
        "category":"faq"
        
      }
    ]
    
    }
    {% endschema %}