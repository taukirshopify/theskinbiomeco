<section class="space">
    <div class="container">
        <div class="title-area wow fadeInUp" data-wow-delay="0.2s">
            <h2 class="sec-title mb-15">{{section.settings.heading }}</h2>
            <p class="sec-text fs-40">{{section.settings.main_content }}</p>
        </div>
        <div class="row align-items-center">
            <div class="col-xl-6 mb-40 mb-xl-0 wow fadeInRight" data-wow-delay="0.2s">
                <div class="rounded-10">
                    <img class="w-100" src="{{section.settings.logo_img | img_url: '1920x' }}" alt="{{section.settings.logo_img.alt }}">
                </div>
            </div>
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="ps-xxl-2">
                    {{section.settings.heading }}
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Our Story Content",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "main_content",
          "label": "Content"
        },
        {
            "type": "image_picker",
            "id": "first_img",
            "label": "Image"
        },
        {
          "type": "textarea",
          "id": "img_content",
          "label": "Description"
        }  
        
      ],
      "presets": [
        {
          "name": "Our Story Content",
          "category": "our story"
  
        }
      ]
  
    }
{% endschema %}