<section class="space-extra bg-smoke">
    <div class="container">
        <div class="eye-area">
            <div class="row">
                <div class="col-xl-6">
                    <h4 class="sec-title d-block d-xl-none">{{ section.settings.heading }}</h4>
                    <div class="img-box2">
                        <div class="group">
                            <div class="img1 wow fadeInLeft" data-wow-delay="0.2s">
                                <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
                                <span class="text">{{ section.settings.before_text }}</span>
                            </div>
                            <div class="img2 wow fadeInRight" data-wow-delay="0.2s">
                                <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
                                <span class="text">{{ section.settings.day_one_text }}</span>
                            </div>
                        </div>
                        <div class="img3 wow fadeInUp" data-wow-delay="0.2s">
                            <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
                            <span class="text">{{ section.settings.day_four_text }}</span>
                        </div>
                    </div>
                </div>
                <div class="col-xl-6 mt-40 mt-xl-0 wow fadeInUp" data-wow-delay="0.3s">
                    <h4 class="sec-title d-none d-xl-block">{{ section.settings.heading }}</h4>
                    {{ section.settings.description }}
                    <h4 class="mb-n2 text-theme">{{ section.settings.author_name }}</h4>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Home Image with Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Name"
        },
        {
          "type": "image_picker",
          "id": "img_one",
          "label": "Before Image"
        },
        {
          "type": "text",
          "id": "before_text",
          "label": "Before Text"
        }, 
        {
          "type": "image_picker",
          "id": "img_two",
          "label": "Day 1 Image"
        },
        {
          "type": "text",
          "id": "day_one_text",
          "label": "Day 1 Text"
        },
        {
          "type": "image_picker",
          "id": "img_three",
          "label": "Day 4 Image"
        },
        {
          "type": "text",
          "id": "day_four_text",
          "label": "Day 4 Text"
        }
        
  
      ],
      "presets": [
        {
          "name": "Home Image with Text",
          "category": "Home"
  
        }
      ]
    }
  {% endschema %}