<section class="space-top">
        <h2 class="sec-title text-center wow fadeInUp" data-wow-delay="0.2s">Reviews</h2>
        <div class="bg-smoke space-extra">
            <div class="container">
                <div class="testi-card-area">

                    <div class="testi-card">
                        <div class="testi-card_img">
                        <img src="{{ block.settings.author_img | img_url: '1920x' }}"
                      alt="{{block.settings.author_img.alt }}">
                        </div>
                        <div class="madia-body">
                            <h3 class="testi-card_title">{{ block.settings.heading }}</h3>
                            {{ block.settings.heading }}
                            <h3 class="testi-card_name">Jon <br>Derma Relief Cream</h3>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>

{% schema %}
    {
        "name": "Review Page Content",
        "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        }
        ],
        "blocks": [
        {
            "type": "text_block",
            "name": "Review Content",
            "settings": [
            {
                "type": "image_picker",
                "id": "author_img",
                "label": "Image"
            },            
            {
                "type": "text",
                "id": "heading",
                "label": "Heading"
            }, {
                "type": "textarea",
                "id": "author_description",
                "label": "Description"
            }, {
                "type": "text",
                "id": "author_name",
                "label": "Name"
            }
            ]
        }
        ],
        "presets": [
        {
            "name": "Review Page Content",
            "category": "Home"
    
        }
        ]
    
    }
{% endschema %}