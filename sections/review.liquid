<section class="space overflow-hidden">
    <div class="container">
        <h3 class="sec-title text-center wow fadeInUp" data-wow-delay="0.2s">Reviews</h3>
        <div class="splide wow fadeInUp" data-wow-delay="0.2s" id="review-slider">
            <div class="splide__track">
                <div class="splide__list">
                    {% for block in section.blocks %}
                    <div class="splide__slide">
                        <div class="testi-box">
                            <div class="testi-box_img">
                                <div class="img">
                                    <img class="w-100" src="{{ block.settings.img_one | img_url: '1920x' }}" alt="{{block.settings.img_one.alt }}">
                                    <span class="text">{{block.settings.heading_one }}</span>
                                </div>
                                <div class="img">                                    
                                    <img class="w-100" src="{{ block.settings.img_two | img_url: '1920x' }}" alt="{{block.settings.img_two.alt }}">
                                    <span class="text">{{block.settings.heading_two }}</span>
                                </div>
                            </div>
                            <div class="madia-body">
                                <p class="testi-box_text">I love that my Derma Relief Cream is a sustainable
                                    steroid-free solution to calmer and healthier skin!</p>
                                <h3 class="testi-box_name">Jon <br>Derma Relief Cream</h3>
                            </div>
                        </div>
                    </div>
                    {% endfor %} 
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name" : "Review",
        "settings" : [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }        
        ],
        "blocks": [
        {
          "type": "text_block",
          "name": "Review Slider",
          "settings": [
            {
              "type": "image_picker",
              "id": "img_one",
              "label": "Image"
            },
            {
            "type": "text",
            "id": "heading_one",
            "label": "Heading"
            }, 
            {
              "type": "image_picker",
              "id": "img_two",
              "label": "Image Two"
            },
            {
            "type": "text",
            "id": "heading_two",
            "label": "Heading Two"
            },
            {
            "type": "textarea",
            "id": "description",
            "label": "Description"
            },
            {
            "type": "textarea",
            "id": "author_name",
            "label": "Name"
            }  
          ]
        }
      ]
    
    }
{% endschema %}