<section class="space">
  <div class="container">
    <div class="row">
      <div class="col-xl-6 mb-40 mb-xl-0 wow fadeInUp" data-wow-delay="0.2s">
        <h2 class="sec-title text-theme text-uppercase">{{ section.settings.heading }}</h2>
        {{ section.settings.description }}
        <div class="d-none d-xl-block mt-30">
          <div class="btn-group">
            <a href="{{section.settings.btn_link }}" class="ot-btn style2 btn-full">More About Our Story</a>
            <a href="{{section.settings.btn_link_two }}" class="ot-btn btn-full">buy now</a>
          </div>
        </div>
      </div>
      <div class="col-xl-6">
        <div class="img-box1 wow fadeInUp" data-wow-delay="0.4s">
          <div class="img1">
            <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
          </div>
          <div class="img2">
            <img src="{{section.settings.img_two | img_url: '1920x' }}" alt="{{section.settings.img_two.alt }}">
          </div>
          <div class="img3">
            <img src="{{section.settings.img_three | img_url: '1920x' }}" alt="{{section.settings.img_three.alt }}">
          </div>
        </div>
        <div class="d-block d-xl-none mt-40">
          <div class="btn-group">
            <a href="{{section.settings.btn_link }}" class="ot-btn style2 btn-full">{{section.settings.btn_link }}</a>
            <a href="{{section.settings.btn_link_two }}" class="ot-btn btn-full">{{section.settings.btn_link }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Home About",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "About Button"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "About Button Link"
      },
      {
        "type": "text",
        "id": "btn_text_two",
        "label": "Buy Now Button"
      },
      {
        "type": "url",
        "id": "btn_link_two",
        "label": "Buy Now Button Link"
      }, {
        "type": "image_picker",
        "id": "img_one",
        "label": "Image One"
      }, {
        "type": "image_picker",
        "id": "img_two",
        "label": "Image Two"
      }, {
        "type": "image_picker",
        "id": "img_three",
        "label": "Image Three"
      }

    ],
    "presets": [
      {
        "name": "Home About",
        "category": "Home"

      }
    ]
  }
{% endschema %}