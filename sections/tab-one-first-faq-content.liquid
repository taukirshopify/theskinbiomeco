<h5 class="border-title">Contents of my Derma Relief Cream</h5>

<div class="accordion-area accordion" id="faqAccordion">

{% for block in section.blocks %}
    <div class="accordion-card {% if forloop.index == 1 %}active{% endif %}">
        <div class="accordion-header" id="collapse-item-1">
            <button class="accordion-button " type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{forloop.index}}"
                aria-expanded="true" aria-controls="collapse-{{forloop.index}}">{{ block.settings.faq_heading }}</button>
        </div>
        <div id="collapse-{{forloop.index}}" class="accordion-collapse collapse show" aria-labelledby="collapse-item-{{forloop.index}}"
            data-bs-parent="#faqAccordion">
            <div class="accordion-body">
                <p class="faq-text">{{ block.settings.faq_text }}</p>
            </div>
        </div>
    </div>
{% endfor %}


</div>

{% schema %}
{
"name": "Tab One First Content",

"blocks": [
{
"type": "text_block",
"name": "FAQ Tab One First Content",
"settings": [

{
"type": "text",
"id": "faq_heading",
"label": "Heading"
},
{
"type": "textarea",
"id": "faq_text",
"label": "Description"
}
]
}
]

}
{% endschema %}