<section class="space-bottom">
    <div class="container">
        {% for block in section.blocks %}
        <div class="row {{block.settings.loop_row_position }}">
            <div class="col-xl-6 mb-30 mb-xl-0 wow fadeInRight" data-wow-delay="0.2s">
                <div class="rounded-10">                    
                <img class="w-100" src="{{ block.settings.loop_img | img_url: '1920x' }}"
                      alt="{{block.settings.loop_img.alt }}">
                </div>
            </div>
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="ps-xxl-2">
                    {{block.settings.loop_description }}
                </div>
            </div>
        </div>
        {% endfor %}        
    </div>
</section>

{% schema %}
    {
      "name": "Our Story Loop",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        
        {
        "type": "select",
        "id": "loop_row_position",
        "options": [
            {
            "value": "flex-row-reverse",
            "label": "Position Reverse"
            },
            {
            "value": "text-center",
            "label": "Position Center"
            },
            {
            "value": "text-end",
            "label": "Position Right"
            }
        ],
        "default": "text-center",
        "label": "Loop Under Content Position"
        }
        
      ],
      "blocks": [
        {
          "type": "text_block",
          "name": "Loop Content",
          "settings": [
           {
              "type": "textarea",
              "id": "loop_description",
              "label": "Description"
            },
            {
              "type": "image_picker",
              "id": "loop_img",
              "label": "Image"
            },
            {
            "type": "select",
            "id": "loop_bg_color",
            "options": [
                {
                "value": "bg-smoke",
                "label": "Background Ghost White"
                },
                {
                "value": "transparent",
                "label": "Background White"
                }
            ],
            "default": "bg-smoke",
            "label": "Loop Background Color"
            },
            {
            "type": "select",
            "id": "loop_row_position",
            "options": [
                {
                "value": "align-items-center",
                "label": "Position Row"
                },
                {
                "value": "flex-row-reverse",
                "label": "Position Flex Row Reverse"
                }
            ],
            "default": "align-items-center",
            "label": "Loop Row Position"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Our Story Loop",
          "category": "our story"
  
        }
      ]
  
    }
  {% endschema %}
