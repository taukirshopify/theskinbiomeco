<div class="mb-4">
        <div class="container">
            <div class="accordion-area accordion" id="scienceAccordian">
<div class="accordion-card style2">
    <div class="accordion-header" id="collapse-item-2">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-2"
            aria-expanded="true" aria-controls="collapse-2">{{section.settings.main_heading }}</button>
    </div>
    <div id="collapse-2" class="accordion-collapse collapse show" aria-labelledby="collapse-item-2"
        data-bs-parent="#scienceAccordian">
        <div class="accordion-body">
            <p class="fs-30 mb-30">{{section.settings.desc_heading }}</p>
            <div class="text-center">
                <img class="w-100 logo-color" src="{{section.settings.hero_bg_img | img_url: '1920x' }}" alt="{{section.settings.hero_bg_img.alt }}">
            </div>
        </div>
    </div>
</div>
</div>
</div>
</div>
</div>

{% schema %}
    {
      "name": "Under Image with Text",
      "settings": [
        {
          "type": "text",
          "id": "main_heading",
          "label": "Heading"
        },        
        {
          "type": "textarea",
          "id": "desc_heading",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "hero_bg_img",
          "label": "Image"
        }
      ],
      "presets": [
      {
        "name": "Under Image with Text",
        "category":"science"
        
      }
    ]
    }
{% endschema %}