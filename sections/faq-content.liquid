{% schema %}
{
    "name": "FAQ Tab",
    "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
        "type": "text",
        "id": "under_text",
        "label": "Under Text"
    },
    {
        "type": "text",
        "id": "under_email",
        "label": "Under Email"
    }
    ],
    "blocks": [
    {
        "type": "faq",
        "name": "faq",
        "settings": [
        {
            "type": "text",
            "id": "tab_title",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "faq_heading",
            "label": "Heading"
        },
        {
            "type": "textarea",
            "id": "faq_description",
            "label": "Description"
        }
        ]
    }
    ],
    "presets": [
    {
        "name": "FAQ Tab",
        "category": "faq"
    }
    ]
}
{% endschema %}