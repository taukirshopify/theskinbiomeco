<section class="space bg-smoke">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-xxl-7 col-lg-10">
        <h2 class="sec-title text-center wow fadeInUp" data-wow-delay="0.1s">{{section.settings.heading }}</h2>
      </div>
      <div class="col-xl-6 col-md-9">
        <div class="cream-img">
          <div class="cream-small wow fadeInLeft" data-wow-delay="0.4s">
            <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
          </div>
          <div class="cream-big wow fadeInRight" data-wow-delay="0.2s">
            <img src="{{section.settings.img_two | img_url: '1920x' }}" alt="{{section.settings.logo_img.alt }}">
          </div>
        </div>
      </div>
    </div>
    <div class="text-center mt-30 wow fadeInUp" data-wow-delay="0.5s">
      <a href="{{section.settings.btn_link_two }}" class="ot-btn btn-full">buy now</a>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Home Product",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "image_picker",
        "id": "img_one",
        "label": "Cream Small Image"
      }, 
      {
        "type": "image_picker",
        "id": "img_two",
        "label": "Cream Big Image"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button"
      }
      
    ],
    "presets": [
    {
      "name": "Home Product",
      "category":"Home"
      
    }
  ]
  }
{% endschema %}