<section class="space">
    <div class="container">
        <div class="title-area wow fadeInUp" data-wow-delay="0.2s">
            <h2 class="sec-title mb-15">{{section.settings.heading }}</h2>
            <p class="sec-text fs-40">{{section.settings.heading }}</p>
        </div>
        <div class="row align-items-center">
            <div class="col-xl-6 mb-40 mb-xl-0 wow fadeInRight" data-wow-delay="0.2s">
                <div class="rounded-10">
                    <img class="w-100" src="assets/img/normal/lab_1.jpg" alt="img">
                </div>
            </div>
            <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
                <div class="ps-xxl-2">
                    <p class="fs-40 mt-n2 mb-35 text-theme fw-bold">Dr Pennino spent over a decade studying the
                        mechanisms underpinning skin disorders and the role of the skin microbiome in contributing to
                        skin health and integrity.</p>
                    <p class="fs-40 mb-n2">He decided to use his expertise to develop a good solution for skin
                        disorders, and The SkinBiome Co.'s solution was discovered after years of intensive research.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
      "name": "Our Story Content",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "main_content",
          "label": "Content"
        },
        {
            "type": "image_picker",
            "id": "first_img",
            "label": "Image"
        },
        {
          "type": "textarea",
          "id": "img_content",
          "label": "Description"
        }  
        
      ],
      "presets": [
        {
          "name": "Our Story Content",
          "category": "our story"
  
        }
      ]
  
    }
{% endschema %}