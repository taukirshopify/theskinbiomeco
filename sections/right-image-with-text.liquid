<div class="">
        <div class="container">
            <div class="accordion-area accordion" id="scienceAccordian">
<div class="accordion-card style2">
    <div class="accordion-header" id="collapse-item-4">
        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-4"
            aria-expanded="true" aria-controls="collapse-4">{{section.settings.main_heading }}</button>
    </div>
    <div id="collapse-4" class="accordion-collapse collapse show" aria-labelledby="collapse-item-4"
        data-bs-parent="#scienceAccordian">
        <div class="accordion-body">
            <div class="row">
                <div class="col-xl-7 mb-30">
                    {{section.settings.desc_heading }}
                </div>
                <div class="col-xl-5 mb-30">
                    <img class="w-100 rounded-10" src="{{section.settings.hero_bg_img | img_url: '1920x' }}" alt="{{section.settings.hero_bg_img.alt }}">
                </div>
            </div>
            {{section.settings.under_desc }}
        </div>
    </div>
</div>
</div>
</div>
</div>

{% schema %}
    {
      "name": "Right Image with Text",
      "settings": [
        {
          "type": "text",
          "id": "main_heading",
          "label": "Heading"
        },        
        {
          "type": "textarea",
          "id": "desc_heading",
          "label": "Description"
        },
        {
          "type": "image_picker",
          "id": "hero_bg_img",
          "label": "Image"
        },
        {
          "type": "textarea",
          "id": "under_desc",
          "label": "Under Content"
        }
      ],
      "presets": [
      {
        "name": "Right Image with Text",
        "category":"science"
        
      }
    ]
    }
{% endschema %}