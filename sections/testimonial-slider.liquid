    <div class="bg-smoke space-extra">
        <div class="container">
            <div class="testi-card-area">
                <div class="splide slider-shadow" id="review-slider2">
                    <div class="splide__track">
                        <div class="splide__list">
                            {% for block in section.blocks %}
                            <div class="splide__slide">
                                <div class="testi-card">
                                    <div class="testi-card_img">
                                        <img src="{{ block.settings.author_img | img_url: '1920x' }}" alt="{{block.settings.img_two.alt }}">
                                    </div>
                                    <div class="madia-body">
