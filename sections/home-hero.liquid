<div class="ot-hero-wrapper hero-slider-1" style="background-image: url('{{section.settings.hero_bg_img | img_url: '1920x' }}');">
    <div class="container">
        <div class="hero-content">
            <div class="mb-35 wow fadeInUp" data-wow-delay="0.1s">
                <img src="{{section.settings.logo_img | img_url: '1920x' }}" alt="{{section.settings.logo_img.alt }}">
            </div>
            <div class="btn-group wow fadeInUp" data-wow-delay="0.3s">
                <a href="{{section.settings.btn_link }}" class="ot-btn style2">{{section.settings.btn_text }}</a>
                <a href="{{section.settings.btn_link_two }}" class="ot-btn">{{section.settings.btn_link_two_text }}</a>
            </div>
        </div>
    </div>
</div>

{% schema %}
    {
      "name": "Hero",
      "settings": [
        {
          "type": "image_picker",
          "id": "hero_bg_img",
          "label": "BG Image"
        },
        {
          "type": "image_picker",
          "id": "logo_img",
          "label": "Hero Logo"
        }, 
        {
          "type": "text",
          "id": "btn_text",
          "label": "Get Started Button"
        },       
        {
          "type": "url",
          "id": "btn_link",
          "label": "Get Started Button Link"
        },
        {
          "type": "text",
          "id": "btn_link_two_text",
          "label": "Buy Now Button"
        },
        {
          "type": "url",
          "id": "btn_link_two",
          "label": "Buy Now Button Link"
        }
        
      ],
      "presets": [
      {
        "name": "Home Hero",
        "category":"Home"
        
      }
    ]
    }
  {% endschema %}