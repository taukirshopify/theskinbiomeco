<section class="space bg-smoke2">
  <div class="container">
    <h3 class="sec-title text-theme mb-40">{{section.settings.heading }}</h3>
    <div class="row">
      <div class="col-xl-6 wow fadeInLeft" data-wow-delay="0.2s">
        <div class="pe-xxl-4">
          {{section.settings.description }}
          <div class="d-none d-xl-block mt-30">
            <div class="btn-group">
              <a href="{{section.settings.btn_link }}" class="ot-btn style2 btn-full">{{section.settings.btn_text }}</a>
              <a href="{{section.settings.btn_link_two }}" class="ot-btn btn-full">{{section.settings.btn_text_two }}</a>
            </div>
          </div>
        </div>
      </div>
      <div class="col-xl-6 mt-40 mt-xl-0 wow fadeInRight" data-wow-delay="0.2s">
        <div class="rounded-36">
          <img src="{{section.settings.img_one | img_url: '1920x' }}" alt="{{section.settings.img_one.alt }}">
        </div>
        <div class="d-block d-xl-none mt-35">
          <div class="btn-group">
            <a href="{{section.settings.btn_link }}" class="ot-btn style2 btn-full">{{section.settings.btn_text }}</a>
            <a href="{{section.settings.btn_link_two }}" class="ot-btn btn-full">{{section.settings.btn_text_two }}</a>
          </div>
        </div>
      </div>
    </div>
    <div class="cta-box1 wow fadeInUp" data-wow-delay="0.2s">
      <h2 class="sec-title">
        {{section.settings.under_text }}
      </h2>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Home Solution",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Learn More Button"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Learn More Button Link"
      },
      {
        "type": "text",
        "id": "btn_text_two",
        "label": "Buy Now Button"
      },
      {
        "type": "url",
        "id": "btn_link_two",
        "label": "Buy Now Button Link"
      }, {
        "type": "image_picker",
        "id": "img_one",
        "label": "Image"
      }, {
        "type": "textarea",
        "id": "under_text",
        "label": "Under Text"
      }

    ],
    "presets": [
      {
        "name": "Home Solution",
        "category": "Home"

      }
    ]
  }
{% endschema %}